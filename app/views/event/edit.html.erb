<% if @event.errors.any? %>
<div class="px-5 pt-4 alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer l'Event pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
div class="container">
  <h1 class="display-4" style="margin-top : 10px;">Post your Event</h1>
</div>
<div class="container  box-shadow">
<%= form_with url: event_path(@event.id), method: :patch, class: "form-group" do |f| %>
 <%= f.label :title,'Titre' %>
  <%= f.text_field :title, class: "form-control", placeholder: 'Title'%>
  <br>
  <%= f.label :description,'Description' %>
  <%= f.text_area :description, class: "form-control", rows: 3, placeholder: 'Details' %>
  <br>
  <div class="form-row">
    <div class="col">
      <%= f.label :location,'Location' %>
      <%= f.text_field :location, class: "form-control", rows:1, placeholder: 'Where ?' %>
    </div>
    <div class="col">
    <%= f.label :start_date,'Date' %>
    <%= f.date_field :start_date, class: "form-control",placeholder: 'When ?' %>
    </div>
    <div class="col">
    <%= f.label :duration,'Duration' %>
    <%= f.number_field :duration, class: "form-control", rows:1, min:5,step:5,placeholder: 'How long?' %>
    </div>
    <div class="col">
      <%= f.label :price,'Price' %>
      <%= f.number_field :price, class: "form-control", min:1,max:1000, rows:1,placeholder: '£' %>
    </div>
  </div>
  <br>
  <%= f.submit "Poster", class: "btn event-btn" %>
<% end %>
</div>
